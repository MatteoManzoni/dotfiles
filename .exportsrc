#!/bin/bash

#FIX PYTHON
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

#Terminal
export TERM="xterm-256color"

#BREW GITHUB TAPS
export HOMEBREW_GITHUB_API_TOKEN=$(keychain -p -s HOMEBREW_GITHUB_API_TOKEN)

#DEV ENV
export GOPATH="$HOME/.go"
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="$HOME/Library/Python/2.7/bin/:$HOME/Library/Python/2.7/bin/:$PATH"
export PATH="$HOME/.scripts:$PATH"
export PATH="/usr/local/opt/nss/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"
export PATH="/Users/matteo/.go/bin:$PATH"

#IF I WANT CROMIUM
export GOOGLE_API_KEY="$(keychain -p -s GOOGLE_API_KEY)"
export GOOGLE_DEFAULT_CLIENT_ID="$(keychain -p -s GOOGLE_DEFAULT_CLIENT_ID)"
export GOOGLE_DEFAULT_CLIENT_SECRET="$(keychain -p -s GOOGLE_DEFAULT_CLIENT_SECRET)"

# GOKU POWER
export GOKU_EDN_CONFIG_FILE=~/.config/karabiner/karabiner.edn

# MISC
export GREP_COLOR="1;32"
export LESS=-R
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin bold
export LESS_TERMCAP_md=$'\E[1;36m'     # begin blink
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline
export PYTHONPATH="$PYTHONPATH:~/.vim/bundle/ropevim/:~/.vim/bundle/ropemode/:~/.vim/bundle/rope/"
export PYTHONSTARTUP="$HOME/.pythonrc"
export EDITOR=vim

# Telemetry enyone?
export DOTNET_CLI_TELEMETRY_OPTOUT=1
