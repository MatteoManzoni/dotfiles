[user]
	name = Matteo Manzoni
[commit]
	gpgsign = true
[gpg]
    program = /usr/local/bin/gpg
[branch]
    autosetuprebase = always
[diff "hex"]
    textconv = hexdump -v -C
    binary = true
[diff "zip"]
    textconv = unzip -v
[diff "pdf"]
    textconv = pdfinfo
[core]
	excludesfile = /Users/matteo/.gitignore
